@model Goldfish.Models.Post
@{
    Layout = null;
}
<article class="post">
	<header class="post-header">
		<span class="post-meta">
			<time datetime="@Model.Published.Format()">@Model.Published.Format()</time>
			@if (Model.HasCategories()) {
				<text>on</text> @Model.GetCategories()
			}
			/ @Model.Comments.Count comments
		</span>
		<h2 class="post-title"><a href="@Model.GetPermalink()">@Model.Title</a></h2>
	</header>
	<section class="post-excerpt">
		<p>@Model.GetExcerpt()&hellip;</p>
	</section>
</article>
